# ============================================================
# AutomatedFundraising - Environment Variables Template
# Copy this file to .env and fill in your values.
# NEVER commit .env to GitHub - it's in .gitignore.
# Store all values below as GitHub Actions Secrets as well.
# ============================================================

# Security / server runtime
# Comma-separated explicit origin allowlist for API CORS
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5000,http://localhost:5000
# Set true in HTTPS production environments
AUTH_COOKIE_SECURE=false
# One-time bootstrap secret for initial admin creation when no admin exists.
# Required for POST /api/auth/bootstrap/admin. Use a long random value.
AUTH_BOOTSTRAP_TOKEN=

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
# Use the modern publishable key (sb_publishable_...) - NOT the service role key.
# Access is governed by RLS policies; no admin-level permissions are exposed.
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_key_here
# Backend-only server credential. Never expose to browser clients.
SUPABASE_SERVICE_ROLE_KEY=

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Sender Identity
SENDER_NAME=Hope from Furry Friends
SENDER_EMAIL=hope@furryfriendswa.org

# Campaign
FUNDRAISER_NAME=2026 Animal Rescue Campaign
UNSUBSCRIBE_BASE_URL=https://furryfriendswa.org/unsubscribe

# Optional: Google Search via SerpAPI
SERPAPI_KEY=

# Optional: Google Maps Platform (Places API / Geocoding API)
GOOGLE_MAPS_API_KEY=

# Optional: LLM-assisted discovery planning and justification
OPENAI_API_KEY=
# Optional override (defaults to OpenAI public API)
OPENAI_API_BASE=https://api.openai.com/v1
# Recommended lightweight model for planner/justification tasks
DISCOVERY_LLM_MODEL=gpt-4.1-mini
# Keep short to avoid slowing search jobs
DISCOVERY_LLM_TIMEOUT_SECONDS=12
# Set true to enable LLM-generated natural-language justifications per result
DISCOVERY_LLM_JUSTIFICATIONS_ENABLED=false

# Optional: Apollo (Apollo.io) contact search/enrichment for discovery previews/imports
APOLLO_ENABLED=true
APOLLO_API_KEY=
APOLLO_API_BASE=https://api.apollo.io
APOLLO_HTTP_TIMEOUT_SECONDS=12
APOLLO_PREVIEW_PER_ORG_LIMIT=3

# Optional: Playwright for JS-rendered pages
PLAYWRIGHT_ENABLED=false

# Batch Settings
BATCH_SIZE=50
SEND_DELAY_SECONDS=1.5
